{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @ingroup templates
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}

<!-- == GLOBAL FOOTER == -->

<!--stopindex-->
<footer id="footer">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <!--#if expr="( $SCRIPT_NAME != '/index.html' )" -->
        <div id="page-tools">
          <!-- FEEDBACK WIDGET -->
          <!--stopindex-->
          <!--#include virtual="/server/feedback/index.html"-->
          <!--startindex-->
          <!-- END FEEDBACK WIDGET -->
        </div>
        <!--#endif-->

        {% if content %}
          <div{{ attributes.addClass(classes) }}>
            {{ content }}
          </div>
        {% endif %}

        <p><a href="/">theSOURCE</a> |
          <a href="mailto:sourceress@nrel.gov">Email Contact</a>
          <br>
          Last Modified: <!--#config timefmt="%m/%d/%y" --> <!--#echo var="LAST_MODIFIED"--></p>

      </div>
    </div>
  </div>
</footer>
<!--startindex-->
<!-- == END GLOBAL FOOTER == -->


